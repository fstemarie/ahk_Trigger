{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build executable",
            "type": "process",
            "command": "C:/Program Files/AutoHotkey/Compiler/Ahk2Exe.exe",
            "args": [
                "/compress", "2",
                "/in", "${workspaceFolder}/src/trigger.ahk",
                "/out", "${workspaceFolder}/dist/trigger.exe"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Deploy to OneDrive",
            "type": "shell",
            "command": "deploy/onedrive.ps1",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy to Local",
            "type": "shell",
            "command": "deploy/local.ps1",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ]
}
